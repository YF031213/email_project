{
    "email_service": {
      "default_subject": "Test Email",
      "default_sender": "no-reply@test.com",
      "welcome_template": "templates/welcome_email.html",
      "error_template": "templates/error_email.html",
      "default_body": "Hello, this is a test email from the mail server."
    },
    "smtp": {
      "use_tls": true,         
      "smtp_host": "smtp.test.com",
      "smtp_port": 2525,         
      "smtp_username": "smtp_user@test.com",
      "smtp_password": "smtp_password",
      "smtp_timeout": 30       
    },
    "pop3": {
      "pop3_host": "pop3.test.com",
      "pop3_port": 1110,        
      "pop3_username": "pop3_user@test.com",
      "pop3_password": "pop3_password",
      "pop3_timeout": 30       
    },
    "logs": {
      "smtp_log_path": "db/logs/smtp_logs.log",
      "pop3_log_path": "db/logs/pop3_logs.log",
      "error_log_path": "db/logs/error_logs.log",
      "log_level": "INFO",     
      "log_rotation": {
        "max_size": 10485760,  
        "backup_count": 5      
      }
    }
  }
  